<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
        <h1><%= @restaurant.name %></h1>
      <hr>
      <p> Address: <%= @restaurant.address %> </p>
      <hr>
      <p> Phone: <%= @restaurant.phone_number %> </p>
      <hr>
      <p> Category: <%= @restaurant.category %> </p>
      <hr>
      <h4>Reviews: </h4>
      <% @restaurant.reviews.each do |review| %>
        <li> "<%= review.content %>" | <%= review.rating %></li>
      <% end %>
      <br><br>
      <%= link_to 'Rate this restaurant', new_restaurant_review_path(@restaurant)%>
      <%= link_to 'Back to List', restaurants_path %>
    </div>
  </div>
</div>
